{
  "dashboard": {
    "id": null,
    "title": "RAG Biomedical Support Dashboard",
    "tags": ["rag", "biomedical", "infrastructure", "alerts"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(rag_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rag_response_time_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "alert": {
          "name": "High Response Time",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [1.5]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg", "params": []},
              "type": "query"
            }
          ],
          "for": "5m",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(rag_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [5]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg", "params": []},
              "type": "query"
            }
          ],
          "for": "5m",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "CPU Usage (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "100 * sum(rate(container_cpu_usage_seconds_total{image!=\"\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "alert": {
          "name": "High CPU Usage",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [80]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg", "params": []},
              "type": "query"
            }
          ],
          "for": "5m",
          "notifications": []
        }
      },
      {
        "id": 5,
        "title": "Memory Usage (MB)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{image!=\"\"}) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "alert": {
          "name": "High Memory Usage",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [800]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg", "params": []},
              "type": "query"
            }
          ],
          "for": "5m",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "Pod Status",
        "type": "stat",
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{phase=\"Failed\"}) by (namespace)",
            "legendFormat": "Failed Pods"
          },
          {
            "expr": "count(kube_pod_status_phase{phase=\"Pending\"}) by (namespace)",
            "legendFormat": "Pending Pods"
          },
          {
            "expr": "count(kube_pod_status_phase{phase=\"Running\"}) by (namespace)",
            "legendFormat": "Running Pods"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "alert": {
          "name": "Failed Pods",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [0]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "sum", "params": []},
              "type": "query"
            }
          ],
          "for": "1m",
          "notifications": []
        }
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}
